<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileTabletCounter.Views.Medicine"
             Title="Medicine"
             >
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="AddButton" Text="Create" Clicked="CreateBarButton_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout>
                    <Label Text="Unfilled Bars" FontAttributes="Bold" />
                    <StackLayout x:Name="unfilledBarsStackLayout" />
                    <Label Text="Filled Bars" FontAttributes="Bold" />
                    <StackLayout x:Name="filledBarsStackLayout" />
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>