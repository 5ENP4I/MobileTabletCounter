<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileTabletCounter.Views.Create"
             Title="Create new">
    <ContentPage.Content>
        <StackLayout Padding="10">

            <StackLayout x:Name="mainPanel" BindingContext="Bar">
                <Label Text="{Binding Name}" HorizontalOptions="Start" VerticalOptions="End" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Frame x:Name="barOutside" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="200" HeightRequest="15" BorderColor="{Binding Color}" CornerRadius="50" />
                    <Frame x:Name="barInside" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="{Binding Fill}" HeightRequest="15" BackgroundColor="{Binding Color}" BorderColor="{Binding Color}" CornerRadius="50" />

                    <StackLayout x:Name="progressCounter" Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="{Binding CurrentDoze}" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Label Text="/" HorizontalOptions="Center" VerticalOptions="Center" />
                        <Label Text="{Binding MaxDoze}" HorizontalOptions="End" VerticalOptions="Center" />
                    </StackLayout>
                </Grid>

                <Label Text="{Binding Description}" HorizontalOptions="Start" VerticalOptions="Start" />
            </StackLayout>

            <Label Text="Name" />
            <Entry x:Name="NameEntry"
                   Placeholder="Enter name"
                   Unfocused="AnyEntry_Unfocused"
                   />

            <Label Text="Description" />
            <Entry x:Name="DescriptionEntry" 
                   Placeholder="Enter description"
                   Unfocused="AnyEntry_Unfocused"/>

            <Label Text="Color" />
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="ColorEntry" 
                       Placeholder="Enter hex color"
                       Unfocused="AnyEntry_Unfocused"/>
                
                <Button Text="Random" Clicked="RandomColorButton_Clicked" />
            </StackLayout>

            <Label Text="Current Progress" />
            <Entry x:Name="CurrentDozeEntry" 
                   Placeholder="Enter current progress" 
                   Keyboard="Numeric"
                   Unfocused="AnyEntry_Unfocused"/>

            <Label Text="Max Consumations" />
            <Entry x:Name="MaxDozeEntry" 
                   Placeholder="Enter max consumations" 
                   Keyboard="Numeric"
                   Unfocused="AnyEntry_Unfocused"/>

            <Label x:Name="ErrorLabel" TextColor="Red" />

            <Button x:Name="Confirm" Text="Confirm" Clicked="ConfirmButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>