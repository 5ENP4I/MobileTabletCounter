<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileTabletCounter.App">
    <!--
        Define global resources and styles here, that apply to all pages in your app.
    -->
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="AntiFlashWhite">#EFEFEF</Color>
            <Color x:Key="ByzantineBlue">#3454d1</Color>
            <Color x:Key="Turquoise">#34d1bf</Color>
            <Color x:Key="Black">#070707</Color>
            <Color x:Key="Cerise">#d1345b</Color>

            
            
            
            <Style x:Key="BlueButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource Turquoise}"></Setter>
                <Setter Property="BorderColor" Value="{StaticResource Turquoise}"></Setter>
            </Style>
            <Style x:Key="RedButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource Cerise}"></Setter>
                <Setter Property="BorderColor" Value="{StaticResource Cerise}"></Setter>
            </Style>
        </ResourceDictionary>        
    </Application.Resources>
</Application>
